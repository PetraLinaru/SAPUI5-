<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m">
    <m:Dialog 
        id="helloDialog"
        title="Hello {/recipient/name}">
        <content>
            <core:Icon 
                src="sap-icon://hello-world"
                size="8rem"
                class="sapUiMediumMargin"/>
        </content>
        <beginButton>
            <Button text="{i18n>dialogCloseButtonText}"
            press=".onCloseDialog"/>
        </beginButton>
    </m:Dialog>
</core:FragmentDefinition>